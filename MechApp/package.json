{
  "name": "autocare",
  "version": "1.0.0",
  "description": "AutoCare - Vehicle service management application built with vanilla JavaScript, HTML5, and CSS3",
  "main": "index.html",
  "scripts": {
    "start": "npx http-server . -p 3000 -o",
    "dev": "npx live-server --port=3000 --open=/index.html",
    "build": "echo 'No build process needed for vanilla JS'",
    "lint": "npx htmlhint *.html && npx stylelint *.css && npx eslint *.js",
    "format": "npx prettier --write .",
    "serve": "python -m http.server 3000"
  },
  "keywords": [
    "javascript",
    "html5",
    "css3",
    "responsive",
    "vanilla-js",
    "web-app",
    "modern-ui",
    "vehicle-service",
    "automotive",
    "dashboard"
  ],
  "author": "AutoCare Developer",
  "license": "MIT",
  "devDependencies": {
    "htmlhint": "^1.1.4",
    "stylelint": "^15.11.0",
    "stylelint-config-standard": "^34.0.0",
    "eslint": "^8.55.0",
    "prettier": "^3.1.0",
    "live-server": "^1.2.2",
    "http-server": "^14.1.1"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/autocare.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/autocare/issues"
  },
  "homepage": "https://github.com/yourusername/autocare#readme"
}
